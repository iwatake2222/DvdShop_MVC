@model IEnumerable<SampleMVCSite.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<section class="container">
    <h2>Orders</h2>
    <p>
        <a class="btn btn-primary" href='@Url.Action("Create", "Customers")'>Add New Customer</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr class="success">
                <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
                <th>@Html.DisplayNameFor(model => model.EmailAddress)</th>
                <th>@Html.DisplayNameFor(model => model.Town)</th>
                <th>@Html.DisplayNameFor(model => model.HomePhone)</th>
                <th>@Html.DisplayNameFor(model => model.BusinessPhone)</th>
                <th>Admin</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="active">
                    <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                    <td>@Html.DisplayFor(modelItem => item.Town)</td>
                    <td>@Html.DisplayFor(modelItem => item.HomePhone)</td>
                    <td>@Html.DisplayFor(modelItem => item.BusinessPhone)</td>
                    <td>
                        <a class="btn btn-info" href='@Url.Action("Details", "Customers", new { id = item.CustomerId })'>Details</a>
                        <a class="btn btn-warning" href='@Url.Action("Edit", "Customers", new { id = item.CustomerId })'>Edit</a>
                        <a class="btn btn-danger" href='@Url.Action("Delete", "Customers", new { id = item.CustomerId })'>Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</section>
